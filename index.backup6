}

.btn-secondary:hover {
    background: rgba(159, 0, 255, 0.1);
    color: #fff;
    box-shadow: 0 0 20px var(--neon-cyan);
    border-color: var(--neon-cyan);
    transform: translateY(-3px);
}

@keyframes spin {
    to { transform: rotate(360deg); }
}

.sidebar-transition {
